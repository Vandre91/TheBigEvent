
@{
    ViewData["Title"] = "Inscription sur ";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/Conexion.css" rel="stylesheet">

    <title>TheBigEvent</title>
</head>
<body>
    <div id="app">
    </div>

    <h1 class="title"> Inscription</h1>

    <div class="form-group">
        <form method="post" action="">

            <input name="Mail" class="form-control glyphicon-log-in" type="email" required="" placeholder="Email" /> <br>
            <input name="Passe" class="form-control glyphicon-log-in" type="password" required="" placeholder="Mot de passe" /><br>
            Professionnel : <input name="pro" value="0" onChange="verif();" type="checkbox" id="check"/><br>
            <script>
                function verif() {
                    var etat = document.getElementById('check').checked;

                    if (etat)
                    {
                        document.getElementById('1').className = 'on';
                        document.getElementById('check').value = '1';
                        document.getElementById('siret').required = true;
                        document.getElementById('compagny').required = true;
                      
                    }
                    else
                    {
                        document.getElementById('1').className = 'off';
                        document.getElementById('check').value = '0';
                        document.getElementById('siret').required = null;
                        document.getElementById('compagny').required = null;
                    }
                }
            </script>
            <br />
            <div id="1" class="off">
                <input id="siret" name="Siret" class="form-control glyphicon-log-in" placeholder="Numéro de siret" /><br>
                <input id="compagny" name="Compagny" class="form-control glyphicon-log-in" placeholder="Nom de l'entrprise'" /><br>
            </div>
            <input type="submit" class="btn btn-default" />
        </form>
    </div>
</body>
</html>